<%= flash[:notice]  %>

<% @user = "admin" %>
<% if @user == "admin"%>
        <%= link_to 'New SubCategory' %>
        <!--brand_car_product_type_path- @brand,@car,@product,@type]-->
        <%= form_for([@brand,@car,@product,@type]) do |f| %>
            <%=  %>
            <%= f.label :name %>
            <%= f.text_field :name %>
            <%= f.submit %>
        <% end %>
<% end %>

